{
  "name": "db",
  "version": "0.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --check --ignore-path=../../.prettierignore . && tsc --noEmit && eslint \".\"",
    "format": "prettier --write --ignore-path=../../.prettierignore .",
    "db:push": "dotenv -e ../../.env -e ../../.env.local -- drizzle-kit generate:sqlite",
    "db:remigrate": "dotenv -e ../../.env -e ../../.env.local -- rm db.sqlite || true && rm -r ./src/migrations || true && pnpm run db:push"
  },
  "devDependencies": {
    "dotenv-cli": "^7.2.1",
    "drizzle-kit": "^0.17.5",
    "eslint-config-custom": "workspace:*"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "better-sqlite3": "^8.3.0",
    "bool-lang": "workspace:*",
    "drizzle-orm": "^0.24.4",
    "soundcloud": "workspace:*",
    "spotify": "workspace:*",
    "superjson": "^1.12.2",
    "utils": "workspace:*"
  }
}
